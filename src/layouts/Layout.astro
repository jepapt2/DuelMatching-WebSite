---
import { playTitle } from 'src/resouces/playTitle';
import TopLogo from '@assets/images/TopLogo.png';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" href="/logo192.png" />
		<meta
      		name="description"
      	content={`国内唯一のTCGマッチングアプリ!対応タイトル:${playTitle.join(',')}`}
    		/>
		<meta name="generator" content={Astro.generator} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@DuelMatching" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={`国内唯一のTCGマッチングアプリ!対応タイトル:${playTitle.join(',')}`} />
		<meta name="twitter:image" content={TopLogo} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary-background: #eff0f3;
		--secondary-background: #fffffe;
		--headline:#0d0d0d;
		--paragraph:#2a2a2a;
		--accsent: #ff8e3c;
	}
	html {
		font-family: "Helvetica Neue",
    				Arial,
    				"Hiragino Kaku Gothic ProN",
    				"Hiragino Sans",
    				Meiryo,
    				sans-serif;
		background-color: var(--primary-background);
	}
</style>
