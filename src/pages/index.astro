---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import TopLogo from '@assets/images/TopLogo.png';
---

<Layout title="DuelMatching">
	<main>
		<img src={TopLogo}>
		<article>
		<ul role="list" class="link-card-list">
			<Card
			>
        <>
          <center>
            <h2>対応タイトル</h2>
          </center>
          <ul class="play-title-list">

          </ul>
        </>
			</Card>
			<Card
			><br/></Card>
		</ul>
		</article>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		max-width: 80ch;
	}
	article{
		padding-right: 0.5rem;
		padding-left: 0.5rem;
		padding-bottom: 1.5rem;
	}
  h2{
		font-size: 1.5rem;
    color: rgb(var(--headline));
	}
	.link-card-list {
		margin-top: 2rem;
		padding: 0;
	}
  .play-title-list{
    display: grid;
  }
</style>
